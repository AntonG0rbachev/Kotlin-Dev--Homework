<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etInput3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="number|numberDecimal|numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etInput2"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/etInput1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autofillHints=""
        android:clickable="true"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:inputType="number|numberDecimal|numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/etInput2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:autofillHints=""
        android:clickable="true"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/etInput1"
        app:layout_constraintTop_toBottomOf="@+id/etInput1"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/btnDel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#FFB300"
        android:text="@string/divisionSign"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btn6" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#FFB300"
        android:text="@string/multiplicationSign"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/btn3" />

    <Button
        android:id="@+id/btnMin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#FFB300"
        android:text="@string/minusSign"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/btnPlus" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#FFB300"
        android:text="@string/plusSign"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/backspaceBtn"
        app:layout_constraintTop_toTopOf="@+id/backspaceBtn" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:backgroundTint="#F4511E"
        android:text="@string/numberZeroStr"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#F4511E"
        android:text="@string/numberOneStr"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="@+id/btnAC"
        app:layout_constraintTop_toBottomOf="@+id/btnAC" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#F4511E"
        android:text="@string/numberTwoStr"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toTopOf="@+id/btn1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#F4511E"
        android:text="@string/numberThreeStr"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toTopOf="@+id/btn2" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#F4511E"
        android:text="@string/numberFourStr"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn1" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#F4511E"
        android:text="@string/numberFiveStr"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn1" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#F4511E"
        android:text="@string/numberSixStr"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn2" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#F4511E"
        android:text="@string/numberSevenStr"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#F4511E"
        android:text="@string/numberEightStr"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />

    <Button
        android:id="@+id/btnComma"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#44000000"
        android:text="@string/floatDot"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/btn0"
        app:layout_constraintTop_toTopOf="@+id/btn0" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#F4511E"
        android:text="@string/numberNineStr"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintTop_toTopOf="@+id/btn8" />

    <Button
        android:id="@+id/btnEqu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#FB8C00"
        android:text="@string/equalsSign"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/btnComma"
        app:layout_constraintTop_toBottomOf="@+id/btnDel" />

    <Button
        android:id="@+id/btnAC"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        android:autoText="false"
        android:backgroundTint="#44000000"
        android:text="@string/clearButtonText"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etInput3"
        tools:ignore="Deprecated,TextViewEdits" />

    <Button
        android:id="@+id/backspaceBtn"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:backgroundTint="#A8170F"
        android:text="@string/backspaceSign"
        android:textSize="40sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/btnAC"
        app:layout_constraintTop_toTopOf="@+id/btnAC" />

</androidx.constraintlayout.widget.ConstraintLayout>